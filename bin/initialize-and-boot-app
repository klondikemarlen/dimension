#!/usr/bin/env bash

initialize () {
	pushd config/init/
	./20_install-vue-cli.sh
	./30_install-packages.sh
	popd
}

boot () {
    initialize

	option_separator=$1
	if [ "$option_separator" == "--" ]; then
		shift
		echo "working dir is: $(pwd)"
	    eval "$@"
	else
	    echo "First argument must be --!"
	    echo "instead it was '${option_separator}'"
	    exit 1
	fi
}

boot "$@"
